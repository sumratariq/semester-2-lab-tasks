def question(ques,ans):
    if ans==ques[-3]:
        totalmarks.append(4)
        correctanswers.append(1)
    elif ans==ques[-1]:
        pass
    elif ans==ques[-2]:
        skipped.append(1)
    elif ans!=ques[-3]:
        totalmarks.append(-1)
        wronganswers.append(1)
    return(totalmarks)
username=input("Enter your name.")
response=input(f"Are you ready for your ecat exam {username}. Y/N ")
